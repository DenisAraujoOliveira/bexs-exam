{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": false,
    "noEmit": true,
    "composite": false,
    "declaration": true,
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.stories.*",
    "**/*.test.*",
    "./node_modules/**/*"
  ]
}
